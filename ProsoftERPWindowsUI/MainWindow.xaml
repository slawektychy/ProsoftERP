<controls:MetroWindow x:Class="ProsoftERP.WPF.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      Title="Moja Aplikacja"
                      Height="450"
                      Width="800"
                       xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      GlowBrush="{DynamicResource AccentColorBrush}">
        
    
    <DockPanel>
        <!-- MENU GÓRNE -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Kartoteki" />
            <MenuItem Header="Developer" Click="DeveloperMenuClick"/>
        </Menu>
 
        <Grid>
            <controls:Tile Title="Nazwa modułu"
               Margin="3"
               controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource MahApps.Brushes.ThemeForeground}"
               Background="Teal"
               HorizontalTitleAlignment="Right">
                <iconPacks:PackIconModern Width="40"
                              Height="40"
                              Kind="Email" />
            </controls:Tile>
        </Grid>

    </DockPanel>
    
</controls:MetroWindow>
