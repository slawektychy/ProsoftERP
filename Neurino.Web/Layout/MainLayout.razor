@using System.Collections.ObjectModel
@inherits LayoutComponentBase
@inject ApplicationContext AppContext


<div class="app-shell d-flex flex-column">

    <!-- Pasek na górze -->
    <header class="app-topbar d-flex justify-content-between align-items-center px-3">
        

        <div class="d-flex align-items-center gap-2">
            <div class="dropdown">
                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                    Plik
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Nowy</a></li>
                    <li><a class="dropdown-item" href="#">Otwórz...</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#">Zamknij</a></li>
                </ul>
            </div>

            <div class="dropdown">
                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                    Narzędzia
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">O programie</a></li>
                    <li><a class="dropdown-item" href="#">Dokumentacja</a></li>
                </ul>
            </div>
        </div>
       
    </header>

    <!-- Layout aplikacji -->
    <div class="app-layout d-flex flex-grow-1">
        <div class="sidebar">
            <DynamicMenu />
        </div>

        <div class="main-container d-flex flex-column flex-grow-1">
            <div class="top-row px-5">
                <button class="btn btn-danger">Wyloguj</button>
            </div>

            <main class="flex-grow-1 overflow-auto px-4">
                <article class="content">
                    @Body
                </article>
            </main>

            <footer class="app-footer d-flex justify-content-between align-items-center px-3 py-1 text-muted">
                <div>
                    Użytkownik: <strong>@AppContext.GetLoggedUserName()</strong>
                </div>
                <div>
                    @DateTime.Now.ToString("yyyy-MM-dd")
                </div>
            </footer>
        </div>
    </div>
    </div>
